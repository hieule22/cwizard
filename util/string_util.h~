#ifndef CONTEST_WIZARD_UTIL_STRING_UTIL_H__
#define CONTEST_WIZARD_UTIL_STRING_UTIL_H__

#include <initializer_list>
#include <string>

namespace contest_wizard {

// Returns the concatenation of a list of strings.
std::string StrCat(std::initializer_list<std::string> args);

// Converts an input string into its lowercase equivalent.
std::string ToLower(std::string str);

}  // namespace contest_wizard

#endif  // CONTEST_WIZARD_UTIL_STRING_UTIL_H__
